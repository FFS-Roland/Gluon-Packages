#!/bin/sh
ME=$(basename $0)
if [ $(ps | grep -c "$ME") -gt 4 ]; then
  logger -s -t $ME "started twice"
  exit 1
fi

if [ "$(uci get gluon-setup-mode.@setup_mode[0].enabled)" = "0" ]; then

  FFIP6=$(ip -f inet6 address | grep "fd21:b4dc:4b" | cut -d':' -f3)
  MYSEG=
  for seg in $FFIP6; do
    if [ -z "$MYSEG" ]; then
      MYSEG=$seg
    else
      if [ "$seg" != "$MYSEG" ]; then
        MYSEG=X
        logger -t $ME "multiple FFS-IPv6"
      fi
    fi
  done

  FFS=/tmp/.gw.ffs
  NOW=$(date +%s)

  if [ -n "$(batctl gwl | grep '=>')" ] && [ "$MYSEG" != "X" ]; then
    echo $NOW >$FFS
    logger -t $ME "node is online"
  else
    if [ -f $FFS ]; then
      OFF=$(cat $FFS)
      DELTA=$((NOW - OFF))
      logger -t $ME "Trouble for ${DELTA} sec."

      if [ $DELTA -gt 1000 ]; then
        rm $FFS
        reboot
      fi
    else
      echo $NOW >$FFS
    fi
  fi
fi
